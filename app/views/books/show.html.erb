<head>
    <style>
    body{
        text-align:center;
    }
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
        padding:10px;
        text-align:center;
      }
    </style>
</head>
<body>
<center>
    <h1>Book Table </h1>

    <table>

        <tr><td>Book Name</td><td>Price</td><td>Author first_name</td><td>Author last_name</td>
        <td>Author dob</td><td>Author email</td><td>Edit</td><td>Delete</td></tr>
        <tr>
        <td><%=@book.name %></td>
        <td><%=@book.price %></td>
        <td><%=@book.author.fname%></td>
        <td><%=@book.author.lname %></td>
        <td><%=@book.author.dob%></td>
        <td><%=@book.author.email %></td>   
        <td><%= button_to 'Edit', edit_book_path(@book), method: 'get'%></td>
        <td><%= button_to 'Remove', book_path(@book), method: 'delete' %></td>  
        </tr>

    </table>
</center>
</body> 